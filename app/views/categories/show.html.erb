<% breadcrumb :category, @category %>
<div class="page-header">
  <h1><%= @category.category_name %></h1>
</div>

<table class="table table-hover">
  <thead>
  <tr>
    <th>Title</th>
    <th>Isbn</th>
    <th>Des</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @category.books.each do |book| %>
    <tr>
      <td><%=link_to book.title, book %></td>
      <td><%= book.isbn %></td>
      <td><%= book.des %></td>
      <% if current_user %>
        <td><%= link_to 'Edit', edit_book_path(book),class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<% if current_user %>
  <%= link_to 'New Book', new_book_path, class: 'btn btn-default'%>
<% end %>
<%= link_to 'Back', books_path, class: 'btn btn-default' %>
