<% breadcrumb :root %>

<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Books</h1>
</div>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Isbn</th>
      <th>Des</th>
      <th>Category</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.isbn %></td>
        <td><%= book.des %></td>
        <% if book.category.nil? %>
          <td>No Category</td>
        <% else %>
          <td><%= book.category.category_name %></td>
        <% end %>
        <td><%= link_to 'Show', book, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_book_path(book),class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @products %>
<br>

<%= link_to 'New Book', new_book_path, class: 'btn btn-default' %>
